<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context="com.example.rucha.homegardening.ShrubActivity">

    <include layout="@layout/content_toolbar"></include>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="horizontal">

            <TableRow>

                <TextView
                    android:id="@+id/txtviewHerb"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="cursive"
                    android:paddingTop="5dp"
                    android:text="@string/shrub_heading"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/trRose"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/txtviewTulsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/rose"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgviewTulsi"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="2dp"
                    android:paddingRight="190dp"
                    android:paddingTop="2dp"
                    app:srcCompat="@drawable/rose" />
            </TableRow>

            <TableRow android:id="@+id/trHibiscus">

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/hibisbus"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgviewAloe"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="180dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/hibiscus" />
            </TableRow>

            <TableRow
                android:id="@+id/trJasmine"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/jasmine"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgviewgenda"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="190dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/jasmine" />
            </TableRow>

            <TableRow
                android:id="@+id/trNerium_Oleander"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/nerium_oleander"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="180dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/nerm_oleander" />
            </TableRow>

            <TableRow android:id="@+id/trFern">

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/fern"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="190dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/fern" />
            </TableRow>

            <TableRow
                android:id="@+id/trArecaPalm"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/textview7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/arecapalm"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview4"
