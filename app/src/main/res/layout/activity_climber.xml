<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context="com.example.rucha.homegardening.HerbActivity">

    <include layout="@layout/content_toolbar"></include>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="horizontal">

            <TableRow>

                <TextView
                    android:id="@+id/txtviewHerb"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="cursive"
                    android:paddingTop="5dp"
                    android:text="@string/climber_heading"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/trBougainvillea"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/txtviewTulsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/bougainvillea"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgviewTulsi"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="2dp"
                    android:paddingRight="120dp"
                    android:paddingTop="2dp"
                    app:srcCompat="@drawable/bouganvalia" />
            </TableRow>

            <TableRow android:id="@+id/trBlue_morning_Glory">

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/blue_morning_glory"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgviewAloe"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="120dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/morning_glory" />
            </TableRow>

            <TableRow
                android:id="@+id/trMoney_Plant"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/moneyplant"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgviewgenda"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="140dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/money_plant" />
            </TableRow>

            <TableRow android:id="@+id/trStar_jasmine">

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/star_jasmine"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="120dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/star_jasmine" />
            </TableRow>

            <TableRow
                android:id="@+id/trFlame_vine"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/flame_vine"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="120dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/flame_vine" />
            </TableRow>

            <TableRow android:id="@+id/trButterflyPea">

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/butterfly_pea"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="120dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/butterfly_pea" />
            </TableRow>

            <TableRow
                android:id="@+id/trTomatoes"
                android:background="?attr/colorControlHighlight">

                <TextView
                    android:id="@+id/textview7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/tomatoes"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="120dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/tomatoes" />
            </TableRow>

            <TableRow
                android:id="@+id/trLoofah">

                <TextView
                    android:id="@+id/textview9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/loofah"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgview6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="120dp"
                    android:paddingTop="3dp"
                    app:srcCompat="@drawable/loofah" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
