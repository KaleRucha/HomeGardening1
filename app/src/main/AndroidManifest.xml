        <activity android:name=".Herbs.AshwagandhaActivity" />
        <activity android:name=".Herbs.LemongrassActivity" />
        <activity android:name=".Herbs.KhusActivity" />
        <activity android:name=".Herbs.LavenderActivity" />
        <activity android:name=".Herbs.ParsleyActivity" />
        <activity android:name=".Herbs.CorianderActivity" />
        <activity android:name=".ShrubActivity" />
        <activity android:name=".ClimberActivity" />
        <activity android:name=".AboutAppActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
